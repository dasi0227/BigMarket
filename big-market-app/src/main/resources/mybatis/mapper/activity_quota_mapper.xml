<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.dasi.infrastructure.persistent.dao.IActivityQuotaDao">

    <resultMap id="dataMap" type="com.dasi.infrastructure.persistent.po.ActivityQuota">
        <id     property="id"               column="id"/>
        <result property="activityQuotaId"  column="activity_quota_id"/>
        <result property="totalCount"       column="total_count"/>
        <result property="dayCount"         column="day_count"/>
        <result property="monthCount"       column="month_count"/>
        <result property="createTime"       column="create_time"/>
        <result property="updateTime"       column="update_time"/>
    </resultMap>

    <select id="queryActivityQuotaByActivityQuotaId" parameterType="java.lang.Long" resultMap="dataMap">
        SELECT activity_quota_id, total_count, day_count, month_count
        FROM activity_quota
        WHERE activity_quota_id = #{activityQuotaId};
    </select>

</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.dasi.infrastructure.persistent.dao.IActivityAccountDayDao">

    <resultMap id="dataMap" type="com.dasi.infrastructure.persistent.po.ActivityAccountDay">
        <id     property="id"          column="id"/>
        <result property="activityId"  column="activity_id"/>
        <result property="userId"      column="user_id"/>
        <result property="day"         column="day"/>
        <result property="dayAllocate" column="day_allocate"/>
        <result property="daySurplus"  column="day_surplus"/>
        <result property="createTime"  column="create_time"/>
        <result property="updateTime"  column="update_time"/>
    </resultMap>

    <select id="queryActivityAccountDay" parameterType="com.dasi.infrastructure.persistent.po.ActivityAccountDay" resultMap="dataMap">
        SELECT activity_id, user_id, `day`, day_allocate, day_surplus
        FROM activity_day
        WHERE user_id = #{userId} AND activity_id = #{activityId} AND `day` = #{day}
    </select>

</mapper>
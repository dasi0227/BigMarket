<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.dasi.infrastructure.persistent.dao.IRechargeQuotaDao">

    <resultMap id="dataMap" type="com.dasi.infrastructure.persistent.po.RechargeQuota">
        <id     property="id"               column="id"/>
        <result property="quotaId"          column="quota_id"/>
        <result property="totalCount"       column="total_count"/>
        <result property="dayCount"         column="day_count"/>
        <result property="monthCount"       column="month_count"/>
        <result property="createTime"       column="create_time"/>
        <result property="updateTime"       column="update_time"/>
    </resultMap>

    <select id="queryRechargeQuotaByQuotaId" parameterType="java.lang.Long" resultMap="dataMap">
        SELECT quota_id, total_count, day_count, month_count
        FROM recharge_quota
        WHERE quota_id = #{quotaId};
    </select>

</mapper>